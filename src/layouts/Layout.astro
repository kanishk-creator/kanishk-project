---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="A website for Kanishk, a game developer based in India"
		/>
		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="/icons/apple-touch-icon.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="32x32"
			href="/icons/favicon-32x32.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="16x16"
			href="/icons/favicon-16x16.png"
		/>
		<link rel="manifest" href="/kanishk.webmanifest" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/ico+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<style>
			@import url("https://api.fontshare.com/v2/css?f[]=clash-display@200,400,700,500,600,1,300&f[]=zodiak@901,700,800,401,301,400,101,1,801,701,900,300,100,2&display=swap");
		</style>
		<title>{title}</title>
	</head>
	<body class="bg-black text-white">
		<slot />
	</body>
</html>
